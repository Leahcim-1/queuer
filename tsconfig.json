{
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "src",
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/*"
  ]
}
